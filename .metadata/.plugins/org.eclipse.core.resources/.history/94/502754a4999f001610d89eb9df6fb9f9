package Chap7Ex4;

public class Queen extends Piece{
	public Queen(Color color){
		super(color);
	}
	
	public boolean isMoveValid(Board board, Point sour, Point dest){
		int dx = dest.getX() - sour.getX();
		int dy = dest.getY() - sour.getY();
		
		if(Math.abs(dx) != Math.abs(dy) ||  || dx == 0)
			return false;
	}
}
