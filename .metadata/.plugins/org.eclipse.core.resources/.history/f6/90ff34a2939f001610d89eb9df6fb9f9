package Chap7Ex4;

public class Board {
	private Piece [][] pieces;
	
	public Board(){
		
	}
	
	private Piece[][] newBoardMat(){
		pieces = new Piece[8][8];
		
		for(int i = 0; i < 8; i++){
			pieces[1][i] = new Pawn();
			pieces[6][i] = new Pawn();
		}
		pieces[0][0] = new Tower();
		pieces[0][7] = new Tower();
		pieces[0][0] = new Tower();
		pieces[0][7] = new Tower();
	}
}
