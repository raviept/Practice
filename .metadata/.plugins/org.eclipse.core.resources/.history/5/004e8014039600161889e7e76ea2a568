package Chap1;

public class Ex3 {
	public static String reverse(String str){
		char[]aux = str.toCharArray();
		int l = str.length()/2;
		
		for(int i = 0; i < l; i++){
			int p = str.length() - i - 1;
			char tmp = aux[i];
			aux[i] = aux[p];
			aux[p] = tmp;
		}
		
		return new String(aux);
	}
	
	public static void main(String [] args){
		System.out.println(reverse("12345"));
	}
}
